APP_NAME=Select
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://select.test:8000

# Docker external ports (change these if you have conflicts)
APP_PORT=8000
DB_EXTERNAL_PORT=5432
FORWARD_REVERB_PORT=8080

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# PostgreSQL Database
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=select
DB_USERNAME=select
DB_PASSWORD=secret

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

# Laravel Reverb (WebSockets)
REVERB_APP_ID=select
REVERB_APP_KEY=select-key
REVERB_APP_SECRET=select-secret
REVERB_HOST=select.test
REVERB_PORT=8080
REVERB_SCHEME=http

# Internal Reverb connection (PHP â†’ Reverb container via Docker network)
REVERB_INTERNAL_HOST=reverb
REVERB_INTERNAL_PORT=8080
REVERB_INTERNAL_SCHEME=http

# For the frontend to connect to Reverb
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# Mail (set to "smtp" in production)
MAIL_MAILER=log
MAIL_HOST=send.one.com
MAIL_PORT=465
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS=post@ekstremedia.no
MAIL_FROM_NAME="${APP_NAME}"
